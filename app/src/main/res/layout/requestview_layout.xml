<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/MidnightBlue">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/cardview_light_background"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/re_imgsinglview"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:scaleType="fitXY"
        android:src="@drawable/startact" />

    <TextView
        android:id="@+id/re_fundprSlogan"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginLeft="100dp"
        android:text="Fund Price:"
        android:textColor="@color/cardview_light_background"
        android:textSize="11dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/re_sloganx"/>

    <TextView
        android:id="@+id/re_fundPice_db"
        android:layout_below="@+id/re_tvcopname"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="11dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/re_fundInterest_db"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/re_fundPice_db"
        android:textColor="@color/cardview_light_background"
        android:textSize="11dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/re_fundTenure_db"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/re_fundInterest_db"
        android:textColor="@color/cardview_light_background"
        android:textSize="11dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/re_TenureprSlogan"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_below="@id/re_interestprSlogan"
        android:layout_marginLeft="100dp"
        android:text="  Tenure:"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/re_interestprSlogan"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_below="@id/re_fundprSlogan"
        android:layout_marginLeft="100dp"
        android:text=" Interest Rate:"
        android:textColor="@color/cardview_light_background"
        android:textSize="11dp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/re_sloganx"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginLeft="100dp"
        android:text=" Company Name:"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/re_tvcopname"
        android:layout_width="210dp"
        android:layout_height="32dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:textSize="11dp"/>

</RelativeLayout>