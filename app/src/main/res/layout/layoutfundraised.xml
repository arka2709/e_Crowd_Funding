<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp">

    <TextView
        android:id="@+id/fundraisedlabel"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="   Fund Raised:"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/MidnightBlue"/>


    <TextView
        android:id="@+id/fundraisedtxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/MidnightBlue"/>

    <TextView
        android:id="@+id/fundraiseddate"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="     Date:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:layout_below="@+id/fundraisedlabel"/>


    <TextView
        android:id="@+id/fundraiseddatetxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/MidnightBlue"
        android:layout_below="@+id/fundraisedtxt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Aquamarine"
        android:textColor="@color/MidnightBlue" />





</RelativeLayout>