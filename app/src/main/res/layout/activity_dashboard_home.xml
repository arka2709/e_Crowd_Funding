<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue"
    tools:context=".dashboardHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/dashboardbg"/>


    <ImageView
        android:id="@+id/icview"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:background="@drawable/ecdlogo" />

    <TextView
        android:id="@+id/slgtag"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/icview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Where start-ups meet Investors "
        android:textColor="@color/Gold"
        android:textStyle="bold"
        android:textSize="18dp" />


    <GridLayout
        android:layout_below="@+id/slgtag"
        android:layout_margin="10dp"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:foregroundGravity="center_horizontal"
        android:columnOrderPreserved="false">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvinvesor"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/Yellow"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/White"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:src="@drawable/investor"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Investor Mode"
                    android:textColor="@color/MidnightBlue"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cvcompany"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/Yellow"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/White"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:src="@drawable/companymode"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Company Mode"
                    android:textColor="@color/MidnightBlue"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvadmin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/Yellow"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/White"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:src="@drawable/adminmode"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Admin Mode"
                    android:textColor="@color/MidnightBlue"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvexit"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/Yellow"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/White"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="128dp"
                    android:src="@drawable/shutdown"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Close Application"
                    android:textColor="@color/MidnightBlue"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </GridLayout>


</RelativeLayout>