<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="@color/MidnightBlue">

    <ImageView
        android:id="@+id/adivimgid"
        android:layout_width="100dp"
        android:layout_height="104dp" />

    <TextView
        android:id="@+id/adivInvestorName"
        android:layout_width="95dp"
        android:layout_height="26dp"
        android:layout_marginLeft="100dp"
        android:text="  Investor Name:"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/adivInvestorNamespc"
        android:layout_width="210dp"
        android:layout_height="26dp"
        android:layout_marginLeft="195dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/adivInvestorGender"
        android:layout_width="95dp"
        android:layout_height="26dp"
        android:layout_below="@+id/adivInvestorName"
        android:layout_marginLeft="100dp"
        android:text="         Gender:"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/adivInvestorGenderspc"
        android:layout_width="210dp"
        android:layout_height="26dp"
        android:layout_below="@+id/adivInvestorNamespc"
        android:layout_marginLeft="195dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/adivInvestordob"
        android:layout_width="95dp"
        android:layout_height="26dp"
        android:layout_below="@+id/adivInvestorGender"
        android:layout_marginLeft="100dp"
        android:text="          DOB:"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/adivInvestordobspc"
        android:layout_width="210dp"
        android:layout_height="26dp"
        android:layout_below="@+id/adivInvestorGenderspc"
        android:layout_marginLeft="195dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/adivInvestoremail"
        android:layout_width="95dp"
        android:layout_height="26dp"
        android:layout_below="@+id/adivInvestordob"
        android:layout_marginLeft="100dp"
        android:text="  Investor Email:"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/adivInvestoremailspc"
        android:layout_width="210dp"
        android:layout_height="26dp"
        android:layout_below="@+id/adivInvestordobspc"
        android:layout_marginLeft="195dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/White" />



</RelativeLayout>