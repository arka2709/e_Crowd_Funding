<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/MidnightBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".holdingInfo">

    <ImageView
        android:id="@+id/companyPic"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
   <TextView
    android:id="@+id/tvCompanyName"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:layout_below="@+id/companyPic"
    android:text="Company Name:"
       android:textSize="16dp"
       android:textColor="@color/cardview_light_background"
       android:textStyle="bold"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tvCompNameSpace"
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:layout_below="@+id/companyPic"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"/>

    <TextView
        android:id="@+id/CmpPrice"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpRoi"
        android:layout_marginLeft="5dp"
        android:text="Price per unit:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/cardview_light_background"
        />
    <TextView
        android:id="@+id/CmpPriceSpace"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpRoiSpace"
        android:layout_marginLeft="125dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpRoi"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvCompanyName"
        android:layout_marginLeft="5dp"
        android:text="Interest Rate:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpRoiSpace"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvCompanyName"
        android:layout_marginLeft="125dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        />
    <TextView
        android:id="@+id/CmpQty"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpTenure"
        android:layout_marginLeft="5dp"
        android:text="Quantity:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpQtySpace"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpTenureSpace"
        android:layout_marginLeft="125dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpTenure"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpPrice"
        android:layout_marginLeft="5dp"
        android:text="   Tenure:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpTenureSpace"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpPriceSpace"
        android:layout_marginLeft="125dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpTotalinvestment"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpQty"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Total Investment:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpTotalSpace"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpQtySpace"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="155dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpDate1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpTotalinvestment"
        android:layout_marginLeft="5dp"
        android:text="Date of Investment:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/CmpDate1Space"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@id/CmpTotalSpace"
        android:layout_marginLeft="155dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        />

 <TextView
     android:id="@+id/CmpDatematu"
     android:layout_width="150dp"
     android:layout_height="40dp"
     android:layout_below="@id/CmpDate1"
     android:layout_marginLeft="5dp"
     android:text="Date of Maturity:"
     android:textAlignment="center"
     android:textStyle="bold"
     android:textSize="16dp"
     android:textColor="@color/cardview_light_background"/>

 <TextView
     android:id="@+id/CmpDatematuSpace"
     android:layout_width="160dp"
     android:layout_height="40dp"
     android:layout_below="@id/CmpDate1Space"
     android:layout_marginLeft="155dp"
     android:textSize="16dp"
     android:textStyle="bold"
     android:textColor="@color/cardview_light_background"/>

 <TextView
     android:id="@+id/CmpAmtmatu"
     android:layout_width="150dp"
     android:layout_height="40dp"
     android:layout_below="@id/CmpDatematu"
     android:layout_marginLeft="5dp"
     android:text="Maturity amount:"
     android:textAlignment="center"
     android:textStyle="bold"
     android:textSize="16dp"
     android:textColor="@color/cardview_light_background"/>

 <TextView
     android:id="@+id/CmpAmtmatuSpace"
     android:layout_width="160dp"
     android:layout_height="40dp"
     android:layout_below="@id/CmpDatematuSpace"
     android:layout_marginLeft="155dp"
     android:textSize="16dp"
     android:textStyle="bold"
     android:textColor="@color/cardview_light_background"/>







        
</RelativeLayout>