<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue"
    tools:context=".company_signup">

    <ImageView
        android:id="@+id/imageViewcregpic"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ecdlogo"
        android:elevation="10dp" />


    <EditText
        android:id="@+id/admemail"
        android:layout_below="@id/imageViewcregpic"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:foregroundTint="#fff"
        android:backgroundTint="#fff" />

    <EditText
        android:id="@+id/adpassword"
        android:layout_below="@id/admemail"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:foregroundTint="#fff"
        android:backgroundTint="#fff"
        android:ems="10"
        android:hint="Enter Password"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/adconpassword"
        android:layout_below="@id/adpassword"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:foregroundTint="#fff"
        android:backgroundTint="#fff"
        android:textColorHint="#fff"
        android:textColor="#fff" />

    <Button
        android:id="@+id/signupadmin"
        android:layout_below="@+id/adconpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="Sign Up as Company"
        android:textColor="@color/MidnightBlue" />

    <Button
        android:id="@+id/loginadmin"
        android:layout_below="@id/signupadmin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:text="Existing User? Login Now!"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/usermd"
        android:layout_below="@id/loginadmin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:text="Go back to selection mode"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/MidnightBlue"
         />

    <ProgressBar
        android:id="@+id/progressBar5"
        android:layout_below="@+id/usermd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>