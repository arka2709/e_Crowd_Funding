<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/MidnightBlue"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/total_Raised"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="  Fund Raised:"
        android:textColor="@color/MidnightBlue"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalRaisedspc"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/trdDate"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/total_Raised"
        android:text="        Date:"
        android:textColor="@color/MidnightBlue"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/trdDatespc"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/totalRaisedspc"
        android:layout_marginLeft="120dp"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/trdTime"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/trdDate"
        android:text="        Time:"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/trdTimespc"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/trdDatespc"
        android:layout_marginLeft="120dp"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold" />


</RelativeLayout>