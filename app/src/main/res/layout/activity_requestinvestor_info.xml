<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestinvestorInfo">

    <ImageView
        android:id="@+id/iviewkyc"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_below="@+id/iinfoslogan"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@id/iviewkyc"
        android:text="Kyc Image"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/MidnightBlue"/>

    <TextView
        android:id="@+id/iinfoslogan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Investor Information"
        android:textSize="26dp"
        android:textStyle="bold"
        android:background="@color/MidnightBlue"
        android:textColor="@color/White"
        android:gravity="center"/>


    <TextView
        android:id="@+id/textiName"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iviewkyc"
        android:layout_marginTop="40dp"
        android:text=" Investor Name"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue"/>

    <TextView
        android:id="@+id/textiNamespc"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iviewkyc"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="121dp"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue"/>

    <TextView
        android:id="@+id/textigender"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textiName"
        android:layout_marginTop="5dp"
        android:text=" Investor Gender:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/textigenderspc"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textiName"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textidob"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textigender"
        android:layout_marginTop="5dp"
        android:text=" Date of Birth:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/textidobspcspc"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textigenderspc"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textiEmail"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textidob"
        android:layout_marginTop="5dp"
        android:text=" Investor Email:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/textiEmailspc"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textidobspcspc"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="121dp"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue"/>

    <TextView
        android:id="@+id/textikyctype"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textiEmail"
        android:layout_marginTop="5dp"
        android:text=" KYC Uploaded:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/textikycpc"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textiEmailspc"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="121dp"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue"/>


    <Button
        android:id="@+id/btnfulldata"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textikyctype"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonblue"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/ic_menu_view"
        android:text="View Complete Data"
        android:textColor="@color/White" />


</RelativeLayout>