<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue"
    tools:context=".useractivity">


    <GridLayout
        android:id="@+id/grid"
        android:layout_below="@+id/idinvestor"
        android:layout_margin="10dp"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:foregroundGravity="center_horizontal"
        android:columnOrderPreserved="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_explore"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/explr" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Explore Funds"
                android:textSize="16dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="125dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/button_cart"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/investmenticon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="My Investments"
                android:textSize="16dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="125dp"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/button_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/addprofile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Create Investor Profile"
                android:textSize="13dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="125dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnvprofile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/vprofile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="View My Profile"
                android:textSize="16dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="125dp"/>
        </androidx.cardview.widget.CardView>





    </GridLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/invlogOut"
        android:layout_below="@+id/grid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/signout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Sign Out"
            android:textSize="16dp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="125dp"/>
    </androidx.cardview.widget.CardView>






    <TextView
        android:id="@+id/tvSlog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#D4AF37"
        android:gravity="center"
        android:text="Explore opportunities to grow your money "
        android:textColor="@color/MidnightBlue"
        android:textSize="16dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/idinvestor"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background" />


</RelativeLayout>