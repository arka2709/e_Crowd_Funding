<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue"
    tools:context=".companyMode">

    <TextView
        android:id="@+id/SloganForLogin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/companyideml"
        android:layout_below="@id/SloganForLogin"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="12dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/jstSlogan"
        android:text="E-Crowd app gives your StartUp a head start to Raise Funds"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#D4AF37"
        android:gravity="center"
        android:textColor="@color/MidnightBlue"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <GridLayout
        android:id="@+id/gridcompany"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="10dp"
        android:rowCount="2"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:alignmentMode="alignMargins"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/companyideml">

        <androidx.cardview.widget.CardView
            android:id="@+id/addyrCompany"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/registercompanyicon"/>

            <TextView
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Register your Company"
                android:textSize="13dp"
                android:textAlignment="center"
                android:textColor="@color/MidnightBlue"
                android:textStyle="bold"/>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/viewbtnfrsd"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/fundraisedicon"/>

            <TextView
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Fund Raised"
                android:textSize="13dp"
                android:textAlignment="center"
                android:textColor="@color/MidnightBlue"
                android:textStyle="bold"/>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/activeInvestors"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/investoricon"/>

            <TextView
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Active Investors"
                android:textSize="13dp"
                android:textAlignment="center"
                android:textColor="@color/MidnightBlue"
                android:textStyle="bold"/>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/vCompanyProfile"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/companyprofileicon"/>

            <TextView
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="View Company Profile"
                android:textSize="13dp"
                android:textAlignment="center"
                android:textColor="@color/MidnightBlue"
                android:textStyle="bold"/>



        </androidx.cardview.widget.CardView>





    </GridLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/comlogOut"
        android:layout_below="@+id/gridcompany"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:src="@drawable/signout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Sign Out"
            android:textSize="16dp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="95dp"/>
    </androidx.cardview.widget.CardView>



</RelativeLayout>