<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/invest">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:background="@color/MidnightBlue">


        <ImageView
            android:id="@+id/ivlog"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ecdlogo"
            android:layout_alignParentTop="true"/>





        <EditText
            android:id="@+id/editlogemail"
            android:layout_below="@+id/ivlog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:foregroundTint="#fff"
            android:backgroundTint="#fff" />

        <EditText
            android:id="@+id/editTextpu"
            android:layout_below="@+id/editlogemail"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:foregroundTint="#fff"
            android:backgroundTint="#fff" />

        <TextView
            android:id="@+id/forgotbtn"
            android:layout_below="@+id/login"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Forgot Password"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/MidnightBlue"
            />


        <Button
            android:id="@+id/login"
            android:layout_below="@+id/editTextpu"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Login as Investor"
            android:textColor="@color/MidnightBlue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#D4AF37"
            android:gravity="center"
            android:text="Make your First Step in investing With E-CROWD"
            android:textColor="@color/MidnightBlue"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_below="@+id/forgotbtn"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>