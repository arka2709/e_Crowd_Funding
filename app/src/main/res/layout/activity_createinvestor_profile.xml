<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".createinvestorProfile">

    <Button
        android:id="@+id/ivrback"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/backiconblack"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="45dp"/>

    <ImageView
        android:id="@+id/imgviewID"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/idpr"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Investor Registration"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/White"
        android:background="@color/MidnightBlue"/>


    <TextView
        android:id="@+id/tvdocType"
        android:layout_width="130dp"
        android:layout_height="24dp"
        android:layout_below="@+id/IDSlogan"
       android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text=" Document selected:"
        android:textColor="@color/Black"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/docSelected"
        android:layout_width="180dp"
        android:layout_height="24dp"
        android:textSize="14dp"
        android:layout_below="@id/IDSlogan"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Black" />

    <RadioGroup
        android:id="@+id/rgType"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_below="@+id/tvdocType"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/adhr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aadhar Card" />

        <RadioButton
            android:id="@+id/vid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voter ID" />

        <RadioButton
            android:id="@+id/drl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driving License" />

        <RadioButton
            android:id="@+id/psprt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passport" />
    </RadioGroup>

    <EditText
        android:id="@+id/iName"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/rgType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:hint="Enter Investor's Name"
        android:textColorHint="@color/Black" />





    <TextView
        android:id="@+id/IDSlogan"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgviewID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:drawableLeft="@android:drawable/stat_sys_upload_done"
        android:text=" Tap on the above icon  to upload KYC: AADHAR Card/ Voter ID/ Driving License/Passport image"
        android:textColor="@color/Black"
        android:textSize="12dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/dob"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iName"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/White"
        android:foregroundTint="@color/White"
        android:gravity="center"
        android:text="Select Date of Birth"
        android:textColor="@color/Black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/dob"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/White"
        android:foregroundTint="@color/White"
        android:gravity="center"
        android:text="Gender:"
        android:textColor="@color/Black"
        android:textSize="14dp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/dob"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="8dp"
        android:spinnerMode="dropdown"
        android:textColor="@color/Black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/iprog"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@id/genderSpinner"
        android:layout_marginTop="15dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>


    <Button
        android:id="@+id/btnsub"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Submit Details"
        android:background="@drawable/button_background"
        android:layout_below="@id/iprog"
        android:layout_marginTop="20dp"/>


</RelativeLayout>