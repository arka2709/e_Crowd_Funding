<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue"
    tools:context=".company_login">


    <ImageView
        android:id="@+id/ivicon"
        android:layout_below="@+id/rview"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ecdlogo"
        android:elevation="10dp"/>



    <EditText
        android:id="@+id/editemail"
        android:layout_below="@+id/ivicon"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:foregroundTint="#fff"
        android:backgroundTint="#fff"/>

    <EditText
        android:id="@+id/editpass"
        android:layout_below="@+id/editemail"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:foregroundTint="#fff"
        android:backgroundTint="#fff" />

    <Button
        android:id="@+id/btnfgpwd"
        android:layout_below="@+id/regcompbt"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="Forgot Password"
        android:textColor="@color/MidnightBlue" />


    <Button
        android:id="@+id/loginadbt"
        android:layout_below="@+id/editpass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="Login As Company"
        android:textColor="@color/MidnightBlue"
         />



    <Button
        android:id="@+id/regcompbt"
        android:layout_below="@+id/loginadbt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="Don't Have account? Register Now!"
        android:textColor="@color/MidnightBlue"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#D4AF37"
        android:gravity="center"
        android:text="Start Raising Funds With E-CROWD Funding"
        android:textColor="@color/MidnightBlue"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:layout_below="@+id/regcompbt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="300dp"/>

    <RelativeLayout
        android:id="@+id/rview"
        android:background="@drawable/crowdfunds"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true">

    </RelativeLayout>



</RelativeLayout>