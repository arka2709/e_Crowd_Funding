<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="152dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/MidnightBlue"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/adcmptotal_Raised"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="  Fund Raised:"
        android:textColor="@color/MidnightBlue"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmptotalRaisedspc"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmptrdDate"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/adcmptotal_Raised"
        android:text="        Date:"
        android:textColor="@color/MidnightBlue"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmptrdDatespc"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/adcmptotalRaisedspc"
        android:layout_marginLeft="120dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmptrdTime"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/adcmptrdDate"
        android:text="        Time:"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmptrdTimespc"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/adcmptrdDatespc"
        android:layout_marginLeft="120dp"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmpemail"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/adcmptrdTime"
        android:text="     Email ID:"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmpemailspc"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@id/adcmptrdTimespc"
        android:layout_marginLeft="120dp"
        android:textSize="18dp"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmpName"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/adcmpemail"
        android:text="       Name:"
        android:textColor="@color/MidnightBlue"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adcmpNamespc"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@id/adcmpemailspc"
        android:layout_marginLeft="120dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>