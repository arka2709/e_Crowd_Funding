<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admininvinfo">


    <TextView
        android:id="@+id/adviniinfosloganfl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Investor Information"
        android:textSize="26dp"
        android:textStyle="bold"
        android:background="@color/MidnightBlue"
        android:textColor="@color/White"
        android:gravity="center"/>


    <TextView
        android:id="@+id/advintextiNamefl"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/adviniinfosloganfl"
        android:layout_marginTop="5dp"
        android:text=" Investor Name:"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/advintextiNamespcfl"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/adviniinfosloganfl"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/advintextigenderfl"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextiNamefl"
        android:layout_marginTop="5dp"
        android:text=" Investor Gender:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/advintextigenderspcfl"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextiNamefl"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="131dp"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue"/>

    <TextView
        android:id="@+id/advintextidobfl"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextigenderfl"
        android:layout_marginTop="5dp"
        android:text=" Date of Birth:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/advintextidobspcspcfl"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextigenderspcfl"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="131dp"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue"/>

    <TextView
        android:id="@+id/advintextiEmailfl"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextidobfl"
        android:layout_marginTop="5dp"
        android:text=" Investor Email:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/advintextiEmailspcfl"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextidobspcspcfl"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/advintextikyctypefl"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextiEmailfl"
        android:layout_marginTop="5dp"
        android:text=" KYC Uploaded:"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/advintextikycpcfl"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextiEmailspcfl"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="131dp"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue"/>

    <TextView
        android:id="@+id/advintextibacttfl"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextikycpcfl"
        android:layout_marginTop="5dp"
        android:text=" Bank Account No:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/advintextibaactflspc"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextikycpcfl"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/advintextiifscfl"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextibacttfl"
        android:layout_marginTop="5dp"
        android:text=" IFSC Code:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/advintextiifscspcfl"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextibaactflspc"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/advintextiphonefl"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextiifscfl"
        android:layout_marginTop="5dp"
        android:text=" Mobile No:"
        android:textSize="15dp"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/advintextiiphonespcfl"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/advintextiifscspcfl"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnadvikyc"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_below="@+id/advintextiphonefl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonblue"
        android:drawableLeft="@android:drawable/ic_menu_view"
        android:text="View KYC Image"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/btnadvipan"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_below="@+id/advintextiphonefl"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonblue"
        android:drawableLeft="@android:drawable/ic_menu_view"
        android:text="View PAN Image"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/btnadviinvestment"
        android:layout_below="@+id/btnadvikyc"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:background="@drawable/buttonblue"
        android:text="View Investments"
        android:textColor="@color/White"
        android:layout_marginTop="20dp"
        android:drawableLeft="@android:drawable/ic_menu_view"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>