<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue"
    android:orientation="vertical"
    tools:context=".Registration">

    <ImageView
        android:id="@+id/imageViewloggbg"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ecdlogo"
        android:elevation="10dp" />


    <EditText
        android:id="@+id/editTextcpu"
        android:layout_below="@+id/editTextpu"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:foregroundTint="#fff"
        android:backgroundTint="#fff"
        android:textColorHint="#fff"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/editTextpu"
        android:layout_below="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:foregroundTint="#fff"
        android:backgroundTint="#fff"
        android:ems="10"
        android:hint="Enter Password"
        android:layout_marginTop="10dp"
        android:inputType="textPassword" />



    <EditText
        android:id="@+id/editTextEmail"
        android:layout_below="@+id/imageViewloggbg"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:foregroundTint="#fff"
        android:backgroundTint="#fff"/>


    <Button
        android:id="@+id/signuser"
        android:layout_below="@+id/editTextcpu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="Sign Up as Investor"
        android:textColor="@color/MidnightBlue" />

    <Button
        android:id="@+id/loginus"
        android:layout_below="@id/signuser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:text="Existing Investor? Login Now!"
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/signupCompany"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_below="@+id/loginus"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="Switch to Company Mode"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvadminlogin"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/loginus"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:text="Admin Mode"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/progressBar4"
        android:layout_below="@+id/tvadminlogin"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>