<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp">

    <TextView
        android:id="@+id/iiemailslogan"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="  Investor Email:"
        android:textColor="@color/MidnightBlue"
        android:textSize="16dp"
       />

    <TextView
        android:id="@+id/iiemail"
        android:layout_marginLeft="120dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:textColor="@color/MidnightBlue"/>


    <TextView
        android:id="@+id/iinameslogan"
        android:layout_below="@+id/iiemailslogan"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="  Investor Name:"
        android:textColor="@color/MidnightBlue"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/iiname"
        android:layout_below="@+id/iiemail"
        android:layout_marginLeft="120dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textColor="@color/MidnightBlue"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/iiname"
        android:background="@color/MidnightBlue"/>


</RelativeLayout>