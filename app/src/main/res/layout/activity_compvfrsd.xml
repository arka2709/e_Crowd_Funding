<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compvfrsd">

    <TextView
        android:id="@+id/viewtRaised"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/MidnightBlue"
        android:textColor="@color/White"
        android:text="Fund Raised: Rs.0"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/viewtRaisedtgt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/MidnightBlue"
        android:layout_below="@+id/viewtRaised"
        android:textColor="@color/White"
        android:textSize="20dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRaised"
        android:layout_below="@+id/viewtRaisedtgt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"/>



</RelativeLayout>